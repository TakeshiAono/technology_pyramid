<%= form_with(model: link, local: true) do |form| %>
  <% if link.errors.any? %>
    <div id="error_explanation" class = "alert alert-danger">
      <h2><%= pluralize(link.errors.count, I18n.t("error.display")) %> <%= I18n.t("error.save") %></h2>

      <ul>
        <% link.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: I18n.t('links.title') %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, placeholder: I18n.t('links.url') %>
  </div>

    <%= form.hidden_field :technology_id %>

  <div class="actions">
    <%= form.submit "登録する", class: 'btn btn-primary' %>
  </div>
<% end %>

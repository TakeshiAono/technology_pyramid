<%= form_with(model: my_page, local: true, url:new_my_page_path) do |form| %>
  <% if my_page.errors.any? %>
    <div id="error_explanation" class = "alert alert-danger">
      <h2><%= pluralize(my_page.errors.count, I18n.t("error.display")) %> <%= I18n.t("error.save") %></h2>

      <ul>
        <% my_page.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

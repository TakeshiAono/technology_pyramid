<%# <p id="notice"><%= notice %></p> %>

<h1><%= I18n.t('pyramids.display') %></h1>

<p><%= link_to I18n.t('technologies.new'), new_technology_path(session[:top_technology_id]), class: "btn btn-primary" %></p>

<div class = "pyramid_wrapper">
  <div class = "pyramid_content">
    <div id = "hierarcky-1">
      <%=link_to @top_technology.name, links_path(@top_technology), id: "#{@top_technology.id}" , class: "technology-1 border border-primary", data:{lower_technologies: @top_technology.lower_technologies.ids} %>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>

    <div id = "hierarcky-2">
      <% counter = 1 %>
      <% @first_hierarckies.each do |technology| %>
          <% unless technology == nil %>
              <%= link_to "#{technology.name}", links_path(technology), id: "#{technology.id}" , class: "technology-2 border border-primary", data:{lower_technologies: technology.lower_technologies.ids} %>
            <% counter += 1 %>
          <% end %>
      <% end %>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>

    <div id = "hierarcky-3" >
      <% @second_hierarckies.each do |technology| %>
        <% unless technology == nil %>
              <%= link_to "#{technology.name}", links_path(technology), id: "#{technology.id}", class: "border border-secondary", data:{lower_technologies: technology.lower_technologies.ids} %>
        <% end %>
      <% end %>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>

    <div id = "hierarcky-4" >
      <% @third_hierarckies.each do |technology| %>
        <% unless technology == nil %>
            <%= link_to "#{technology.name}", links_path(technology), id: "#{technology.id}", class: "border border-success", data:{lower_technologies: technology.lower_technologies.ids} %>
        <% end %>
      <% end %>
    </div>
    
    <div id = "hierarcky-5" >
      <% @fourth_hierarckies.each do |technology| %>
        <% unless technology == nil %>
            <%= link_to "#{technology.name}", links_path(technology), id: "#{technology.id}", class: "border border-warning" %>
        <% end %>
      <% end %>
    </div>

  </div>
</div>
<%= javascript_pack_tag 'pyramid', 'data-turbolinks-track': 'reload' %>

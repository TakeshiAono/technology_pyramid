<p id="notice"><%= notice %></p>

<h1>Technologies</h1>

<%= link_to 'New Technology', new_technology_path %>

<h2>応用技術</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Public flag</th>
      <th>Work</th>
      <th>basic_flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @technologies.each do |technology| %>
      <tr>
        <td><%= technology.name %></td>
        <td><%= technology.public_flag %></td>
        <%# <td><%= technology.upper_technology %></td> %>
        <%# <td><%= technology.lower_technology %></td> %>
        <td><%= technology.work_id %></td>
        <td><%= technology.basic_flag %></td>
        <td><%= link_to 'pyramid', pyramids_path(technology) %></td>
        <td><%= link_to 'Edit', edit_technology_path(technology) %></td>
        <td><%= link_to 'Destroy', technology, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h1><%= I18n.t('technologies.show') %></h1>

<div class = "show-content">
  <p>
    <strong>Name:</strong>
    <%= @technology.name %>
  </p>

  <p>
    <strong>Public flag:</strong>
    <%= @technology.public_flag %>
  </p>

  <div class = "show-link-word">
    <% if session[:before_controller_path] == 'pyramids' %>
      <%= link_to I18n.t("edit"), edit_technology_path(session[:top_technology_id]) %> |
      <%= link_to I18n.t("back"), pyramids_path(session[:top_technology_id]) %>
    <% else %>
      <%= link_to I18n.t("edit"), edit_technology_path(@technology) %> |
      <%= link_to I18n.t("back"), technologies_path %>
    <% end %>
  </div>
</div>
        <th><%= I18n.t('works.title') %></th>
        <th><%= I18n.t('works.public_flag') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @inactive_works.each do |work| %>
        <tr class = "table-warning">
          <td><%= link_to I18n.t('technologies.index'), technologies_path(work), class: "btn btn-success" %></td>
          <td><%= work.title %></td>
          <td>
            <% if work.public_flag == true%>
              <i class="far fa-eye"></i>
            <% else %>
              <i class="far fa-eye-slash"></i>
            <% end %>
          </td>
          <% if current_user == work.user %>
            <td><%= link_to I18n.t("show"), work_path(work), class: "btn btn-secondary" %></td>
            <td><%= link_to I18n.t("edit"), edit_work_path(work), class: "btn btn-warning" %></td>
            <td><%= link_to I18n.t("destroy"), work, method: :delete, data: { confirm: I18n.t("confirm.destroy") }, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
